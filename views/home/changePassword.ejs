<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./../includes/head.ejs'); %>

    <link rel="stylesheet" href="/css/forms.css" />
  </head>

  <body>
    <main class="main">
      <div class="main__container">
        <form 
          action="/auth/change-password"
          class="form form--small"
          method="POST"
        >
          <%- 
            include('./../includes/title.ejs', { backLink: '/home/settings' });
          %>

          <ul class="form__list">
            <li class="form__item">
              <label for="old-password" class="form__label form__label--medium">
                <span>Old Password <span class="form__required">*</span></span>
              </label>
              <input
                type="password"
                class="form__input"
                name="old-password"
                minlength="8"
                required
              />
            </li>

            <li class="form__item">
              <label for="password" class="form__label form__label--medium">
                <span>New Password <span class="form__required">*</span></span>
              </label>
              <input
                type="password"
                class="form__input"
                name="password"
                minlength="8"
                required
              />
            </li>

            <li class="form__item">
              <label
                for="confirm-password" 
                class="form__label form__label--medium"
              >
                <span>
                  Confirm New Password <span class="form__required">*</span>
                </span>
              </label>
              <input
                type="password"
                class="form__input"
                name="confirm-password"
                minlength="8"
                required
              />
            </li>
          </ul>

          <%- include('./../includes/buttonRow.ejs', { 
            cancelLink: '/home/settings',
            disabled: false 
          }); %>
        </form>
      </div>
    </main>

    <script src="/js/passwordValidate.js"></script>
  </body>
</html>
