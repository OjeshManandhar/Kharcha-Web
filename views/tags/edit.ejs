<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./../includes/head.ejs'); %>

    <link rel="stylesheet" href="/css/forms.css" />
  </head>

  <body>
    <main class="main">
      <div class="main__container">
        <form
          action="/tags/edit"
          class="form form--small"
          method="POST"
          autocomplete="off"
        >
          <%- include('./../includes/title.ejs', { backLink: '/tags' }); %>

          <ul class="form__list">
            <li class="form__item">
              <label for="old-tag" class="form__label">
                <span>Old Tag <span class="form__required">*</span></span>
              </label>
              <input
                type="text"
                class="form__input"
                name="old-tag"
                required
                autofocus
              />
            </li>

            <li class="form__item">
              <label for="new-tag" class="form__label">
                <span>New Tag <span class="form__required">*</span></span>
              </label>
              <input type="text" class="form__input" name="new-tag" required />
            </li>
          </ul>
          
          <%- include('./../includes/buttonRow.ejs', { cancelLink: '/tags', disabled: false }); %>
        </form>
      </div>
    </main>
  </body>
</html>
