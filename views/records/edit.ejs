<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./../includes/head.ejs'); %>

    <link rel="stylesheet" href="/css/forms.css" />
    <link rel="stylesheet" href="/css/list.css" />
  </head>

  <body>
    <main class="main">
      <div class="main__container">
        <div class="form">
          <%- include('./../includes/title.ejs', { backLink: '/records' }); %>

          <ul class="form__list">
            <li class="form__item">
              <label for="id" class="form__label">
                <span>ID <span class="form__required">*</span></span>
              </label>
              <input
                type="number"
                class="form__input"
                form="edit-form"
                name="id"
                step="1"
                min="1"
                required
                autofocus
              />
            </li>
          </ul>

          <div class="divider"></div>

          <div class="block">
            <form
              id="edit-form"
              action="/records/edit"
              class="form form--width-100 record visibility-hidden auto-populate"
              method="POST"
              autocomplete="off"
            >
              <ul class="form__list">
                <%- include('./../includes/recordForm.ejs', { newRecord: false
                }); %>
              </ul>
            </form>

            <div class="block__message">Enter ID</div>
          </div>

          <%# Cannot use buttonRow partial because the submit is outside form %>
          <div class="button__button-container">
            <a href="/records" class="button__button-link">
              <div class="button__button button__button--small">Cancel</div>
            </a>
            <button
              type="submit"
              form="edit-form"
              class="button__button button__button--small"
              disabled
            >
              <%= title %>
            </button>
          </div>
        </div>
      </div>
    </main>

    <script src="/js/populateForm.js"></script>
  </body>
</html>
