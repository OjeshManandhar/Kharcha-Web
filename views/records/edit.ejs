<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./../includes/head.ejs') %>

    <link rel="stylesheet" href="/css/forms.css" />
    <link rel="stylesheet" href="/css/list.css" />
  </head>

  <body>
    <main class="main">
      <div class="main__container">
        <div class="form">
          <div class="title">
            <a href="/records" class="title__back"><</a>

            <h1 class="title__heading"><%= title %></h1>
          </div>

          <ul class="form__list">
            <li class="form__item">
              <label for="id" class="form__label">
                <span>ID <span class="form__required">*</span></span>
              </label>
              <input
                id="edit-form-id"
                type="number"
                class="form__input"
                form="edit-form"
                name="id"
                required
                autocomplete="off"
              />
            </li>
          </ul>

          <div class="divider"></div>

          <form
            id="edit-form"
            action="/records/edit"
            class="form form--width-100"
            method="POST"
          >
            <ul class="form__list">
              <li class="form__item">
                <label for="date" class="form__label">
                  Date <span class="forn__required">*</span>
                </label>
                <input type="date" class="form__input" required />
              </li>

              <li class="form__item">
                <label for="amount" class="form__label">
                  <span>Amount <span class="form__required">*</span></span>
                </label>
                <span class="form__amount">Rs.</span>
                <input
                  type="number"
                  class="form__input"
                  name="amount"
                  required
                />
              </li>

              <li class="form__item">
                <div class="form__label">
                  <span>Type <span class="form__required">*</span></span>
                </div>
                <div class="form__radio-container">
                  <div class="form__radio">
                    <input
                      type="radio"
                      class="form__radio-input"
                      name="type"
                      value="debit"
                      required
                      checked="checked"
                    />
                    <label for="type" class="form__radio-label">Debit</label>
                  </div>
                  <div class="form__radio">
                    <input
                      type="radio"
                      class="form__radio-input"
                      name="type"
                      value="credit"
                      required
                    />
                    <label for="type" class="form__radio-label">Credit </label>
                  </div>
                </div>
              </li>

              <li class="form__item">
                <label for="tags" class="form__label">
                  <span>Tags</span>
                </label>
                <input
                  type="text"
                  name="tags"
                  class="form__input"
                  autocomplete="off"
                  placeholder="Comma separated tags list"
                />
              </li>

              <li class="form__item">
                <label for="description" class="form__label">
                  <span>Description</span>
                </label>
                <textarea
                  wrap="hard"
                  class="form__textarea"
                  name="description"
                  placeholder="Description"
                ></textarea>
              </li>
            </ul>
          </form>

          <div class="button__button-container">
            <a href="/records" class="button__button-link">
              <div class="button__button button__button--small">Cancel</div>
            </a>
            <button
              type="submit"
              form="edit-form"
              class="button__button button__button--small"
            >
              <%= title %>
            </button>
          </div>
        </div>
      </div>
    </main>
  </body>
</html>
