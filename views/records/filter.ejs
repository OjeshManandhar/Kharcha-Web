    <%- include('./../includes/head.ejs'); %>

    <link rel="stylesheet" href="/css/forms.css" />
  </head>

  <body>
    <main class="main">
      <div class="main__container">
        <form
          action="/records/filter"
          class="form"
          method="POST"
          autocomplete="off"
        >
          <div class="title">
            <a href="/records" class="title__back"><</a>

            <h1 class="title__heading"><%= title %></h1>
          </div>

          <ul class="form__list">
            <li class="form__item">
              <div class="form__label">
                <span>ID</span>
              </div>
              <input
                type="number"
                class="form__input"
                name="id-start"
                step="1"
                min="1"
              />
              <span class="form__multi-input-text">to</span>
              <input
                type="number"
                class="form__input"
                name="id-end"
                step="1"
                min="1"
              />
            </li>

            <li class="form__item">
              <div class="form__label">
                <span>Date</span>
              </div>
              <input type="date" class="form__input" name="date-start" />
              <span class="form__multi-input-text">to</span>
              <input type="date" class="form__input" name="date-end" />
            </li>

            <li class="form__item">
              <div class="form__label">
                <span>Amount</span>
              </div>
              <span class="form__amount">Rs.</span>
              <input
                type="number"
                class="form__input"
                name="amount-start"
                step="0.01"
                min="0"
              />
              <span class="form__multi-input-text">to</span>
              <span class="form__amount">Rs.</span>
              <input
                type="number"
                class="form__input"
                name="amount-end"
                step="0.01"
                min="0"
              />
            </li>

            <li class="form__item">
              <div class="form__label">
                <span>Type</span>
              </div>
              <div class="form__radio-container">
                <div class="form__radio">
                  <input
                    name="type"
                    type="radio"
                    class="form__radio-input"
                    value="any"
                    checked="checked"
                    required
                  />
                  <label for="type" class="form__radio-label">Any</label>
                </div>
                <div class="form__radio">
                  <input
                    name="type"
                    type="radio"
                    class="form__radio-input"
                    value="debit"
                    required
                  />
                  <label for="type" class="form__radio-label"
                    >Debits only</label
                  >
                </div>
                <div class="form__radio">
                  <input
                    name="type"
                    type="radio"
                    class="form__radio-input"
                    value="credit"
                    required
                  />
                  <label for="type" class="form__radio-label"
                    >Credits only</label
                  >
                </div>
              </div>
            </li>

