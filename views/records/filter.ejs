            <!-- Select tags-type -->
            <li class="form__item">
              <label for="tags" class="form__label">
                <span>Tags</span>
              </label>
              <div class="form__select-container">
                <select name="tags-type" class="form__select">
                  <option value="any" selected>Any among</option>
                  <option value="all">All among</option>
                </select>
              </div>
              <input
                type="text"
                name="tags"
                class="form__input"
                placeholder="Comma separated tags list"
              />
            </li>

            <li class="form__item">
              <label for="description" class="form__label">
                <span>Description</span>
              </label>
              <textarea
                wrap="hard"
                name="description"
                class="form__textarea"
                placeholder="Description"
              ></textarea>
            </li>

            <li class="form__item form__item--margin-top">
              <div class="form__label">
                <span>Criteria <span class="required">*</span></span>
              </div>
              <div class="form__radio-container">
                <div class="form__radio">
                  <input
                    name="criteria"
                    type="radio"
                    class="form__radio-input"
                    value="any"
                    checked="checked"
                    required
                  />
                  <label for="criteria" class="form__radio-label">
                    Matching Any Criteria
                  </label>
                </div>
                <div class="form__radio">
                  <input
                    name="criteria"
                    type="radio"
                    class="form__radio-input"
                    value="all"
                    required
                  />
                  <label for="criteria" class="form__radio-label">
                    Matching All Criteria
                  </label>
                </div>
              </div>
            </li>
          </ul>

          <div class="button__button-container">
            <a href="/records" class="button__button-link">
              <div class="button__button button__button--small">Cancel</div>
            </a>
            <button type="submit" class="button__button button__button--small">
              <%= title %>
            </button>
          </div>
        </form>
