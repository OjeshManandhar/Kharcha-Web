<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./../includes/head.ejs') %>

    <link rel="stylesheet" href="/css/forms.css" />
  </head>

  <body>
    <main class="main">
      <div class="main__container">
        <form action="/records/add" class="form" method="POST">
          <div class="title">
            <a href="/records" class="title__back"><</a>

            <h1 class="title__heading">Add Record</h1>
          </div>

          <ul class="form__list">
            <li class="form__item">
              <label for="id" class="form__label">
                <span>ID</span>
              </label>
              <input
                type="text"
                class="form__input"
                name="id"
                value="1"
                disabled
              />
            </li>

            <li class="form__item">
              <label for="date" class="form__label">
                <span>Date <span class="form__required">*</span></span>
              </label>
              <input type="date" class="form__input" name="date" required />
            </li>

            <li class="form__item">
              <label for="amount" class="form__label">
                <span>Amount <span class="form__required">*</span></span>
              </label>
              <span class="form__amount">Rs.</span>
              <input type="number" class="form__input" name="amount" required />
            </li>

            <li class="form__item">
              <div class="form__label">
                <span>Type <span class="form__required">*</span></span>
              </div>
              <div class="form__radio-container">
                <div class="form__radio">
                  <input
                    type="radio"
                    class="form__radio-input"
                    name="type"
                    value="debit"
                    required
                    checked="checked"
                  />
                  <label for="type" class="form__radio-label">Debit</label>
                </div>
                <div class="form__radio">
                  <input
                    type="radio"
                    class="form__radio-input"
                    name="type"
                    value="credit"
                    required
                  />
                  <label for="type" class="form__radio-label">Credit </label>
                </div>
              </div>
            </li>

            <li class="form__item">
              <label for="tags" class="form__label">
                <span>Tags</span>
              </label>
              <input
                type="text"
                name="tags"
                class="form__input"
                autocomplete="off"
                placeholder="Comma separated tags list"
              />
            </li>

            <li class="form__item">
              <label for="description" class="form__label">
                <span>Description</span>
              </label>
              <textarea
                wrap="hard"
                class="form__textarea"
                name="description"
                placeholder="Description"
              ></textarea>
            </li>
          </ul>

          <div class="button__button-container">
            <a href="/records" class="button__button-link">
              <div class="button__button button__button--small">Cancel</div>
            </a>
            <button type="submit" class="button__button button__button--small">
              Add Record
            </button>
          </div>
        </form>
      </div>
    </main>
  </body>
</html>
