<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./../includes/head.ejs'); %>

    <link rel="stylesheet" href="/css/forms.css" />
  </head>

  <body>
    <main class="main">
      <div class="main__container">
        <form
          action="/records/add"
          class="form"
          method="POST"
          autocomplete="off"
        >
          <div class="title">
            <a href="/records" class="title__back"><</a>

            <h1 class="title__heading"><%= title %></h1>
          </div>

          <ul class="form__list">
            <li class="form__item">
              <label for="id" class="form__label">
                <span>ID</span>
              </label>
              <input
                type="number"
                class="form__input"
                name="id"
                value="1"
                step="1"
                disabled
              />
            </li>

            <%- include('./../includes/recordForm.ejs', {newRecord: true}) %>
          </ul>

          <div class="button__button-container">
            <a href="/records" class="button__button-link">
              <div class="button__button button__button--small">Cancel</div>
            </a>
            <button type="submit" class="button__button button__button--small">
              <%= title %>
            </button>
          </div>
        </form>
      </div>
    </main>
  </body>
</html>
