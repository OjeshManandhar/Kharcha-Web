<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./../includes/head.ejs'); %>

    <link rel="stylesheet" href="/css/forms.css" />
    <link rel="stylesheet" href="/css/list.css" />
  </head>

  <body>
    <main class="main">
      <div class="main__container">
        <form
          action="/records/delete"
          class="form"
          method="POST"
          autocomplete="off"
        >
          <%- include('./../includes/title.ejs', { backLink: '/records' }); %>

          <ul class="form__list">
            <li class="form__item">
              <label for="id" class="form__label">
                <span>ID <span class="form__required">*</span></span>
              </label>
              <input
                type="number"
                class="form__input"
                name="id"
                step="1"
                min="1"
                required
                autofocus
              />
            </li>
          </ul>

          <div class="divider"></div>

          <div class="block">
            <div
              class="list__block list__block--width-100 record visibility-hidden auto-populate"
            >
              <div class="list__row">
                <div class="list__label">Date</div>
                <div class="list__value" auto-populate-data="date"></div>

                <div class="list__label list__label--no-grow">ID</div>
                <div
                  class="list__value list__value--no-grow"
                  auto-populate-data="id"
                ></div>
              </div>
              <div class="list__row">
                <div class="list__label">Amount</div>
                <div class="list__value" auto-populate-data="amount"></div>

                <div class="list__label list__label--no-grow">Type</div>
                <div
                  class="list__value list__value--no-grow"
                  auto-populate-data="type"
                ></div>
              </div>
              <div class="list__row">
                <div class="list__label">Tags</div>
                <div class="list__value" auto-populate-data="tags"></div>
              </div>
              <div class="list__row">
                <div class="list__label">Description</div>
                <div
                  class="list__value list__value--description"
                  auto-populate-data="description"
                ></div>
              </div>
            </div>

            <div class="block__message">Enter ID</div>
          </div>

          <%- include('./../includes/buttonRow.ejs', { cancelLink: '/records',
          disabled: true }); %>
        </form>
      </div>
    </main>

    <script src="/js/populateForm.js"></script>
  </body>
</html>
